{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false,
    "ENV": false
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "class-methods-use-this": "off"
  }
}